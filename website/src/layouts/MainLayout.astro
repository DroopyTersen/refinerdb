---
import "../styles/global.css";

const { content = {}, hideRightSidebar = false } = Astro.props;
const title = Astro.props?.title || content?.title || "RefinerDB"
import Navigation from "./components/Navigation.astro";
---

<html lang="en" data-theme="light">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width" />
	<title>{title}</title>
     <style>
      body {
        --header-height: 3rem;
        width: 100%;
        display: grid;
        height: 100vh;
        --max-width: 100vw;
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }
      .layout {
        display: grid;
        grid-template-areas: 
        "leftsidebar      header    header"
        "leftsidebar      main      rightsidebar";
        grid-template-rows: var(--header-height) 1fr;
        grid-template-columns: 260px 1fr 220px;
        /* gap: 2rem; */
        overflow-x: hidden;
      }
      header {
        grid-area: header;
      }
      .layout :global(> *) {
        width: 100%;
        height: 100%;
      }
      .grid-sidebar {
        position: sticky;
        top: 0;
      }
      #grid-left {
        grid-area: leftsidebar;
        z-index: 10;
      }
      #grid-right {
        grid-area: rightsidebar;
        z-index: 10;
      }
      #grid-main {
        grid-area: main;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

    </style>
</head>

  <body>
    <!-- <Header currentPage={currentPage} /> -->
    <div class="layout">
    <header  class='flex items-center px-8 py-4 bg-gray-100'>Header</header>
      <aside id="grid-left" class="bg-gray-700 grid-sidebar" title="Site Navigation">
        <Navigation />
      </aside>
      <main id="grid-main" class='p-8'>
          <slot />
      </main>
      <aside id="grid-right" class="p-8 grid-sidebar" title="Table of Contents">
        {!hideRightSidebar && <slot name='right-sidebar' />}
        
      </aside>
    </div>
  </body>
</html> 