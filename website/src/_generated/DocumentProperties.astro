---
import PropsTable from "../components/PropsTable/PropsTable.astro";
let properties= Astro.props.properties;
interface TableProperty {
  name: string;
  description?: string;
  isRequired: "Required" | "Optional";
  type: string;
}
let propTableProperties : TableProperty[] = properties.map(typeProperty => {
  return  {
    name: typeProperty.name,
    description: typeProperty?.documentation?.contentsRaw,
    type: typeProperty.type,
    isRequired: typeProperty.flags.isOptional ? "Optional" : "Required",
  };
});

---

  <h3 class='mt-3 text-xl'>Properties</h3>
  <PropsTable properties={propTableProperties} />
