{
  "name": "refinerdb",
  "description": "A browser database (indexeddb wrapper) used to support advanced search scenarios. An engine that could power an Amazon Refiner-like search experience.",
  "version": "1.1.0-0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "directories": {
    "lib": "lib",
    "dist": "dist"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "start": "npm run tsc:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ui": "majestic",
    "tsc:watch": "tsc -p tsconfig.json --watch",
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:cjs && npm run build:worker",
    "postbuild": "npm run build:worker",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:worker": "esbuild src/workers/refinerdb.worker.ts --bundle --minify --sourcemap --outfile=lib/refinderdb.worker.js",
    "clean": "rimraf lib",
    "prerelease": "npm run build",
    "release": "np --any-branch --tag=beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DroopyTersen/refinerdb.git"
  },
  "author": "Andrew Petersen",
  "bugs": {
    "url": "https://github.com/DroopyTersen/refinerdb/issues"
  },
  "homepage": "https://github.com/DroopyTersen/refinerdb#readme",
  "dependencies": {
    "comlink": "^4.3.1",
    "dexie": "^3.0.3",
    "lodash": "^4.17.15",
    "xstate": "^4.26.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "esbuild": "^0.13.12",
    "fake-indexeddb": "^3.1.7",
    "jest": "^27.3.1",
    "majestic": "^1.8.1",
    "np": "^7.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "license": "MIT",
  "keywords": [
    "indexeddb",
    "refiners",
    "search"
  ]
}
