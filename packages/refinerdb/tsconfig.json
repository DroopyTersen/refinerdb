{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "lib/esm",
    "incremental": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*test.tsx", "src/**/*test.ts", "src/__tests"]
}
