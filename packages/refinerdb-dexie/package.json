{
  "name": "refinerdb-dexie",
  "description": "An IndexedDB persisted storage plugin for RefinerDB. Built on top of Dexie.js.",
  "version": "1.2.4-alpha.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "start": "npm run tsc:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ui": "majestic",
    "tsc:watch": "tsc -p tsconfig.json --watch",
    "prebuild": "npm run clean",
    "build-removing": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:worker": "esbuild src/workers/refinerdb.worker.ts --bundle --minify --sourcemap --outfile=lib/refinerdb.dexie.worker.js",
    "clean": "rimraf lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DroopyTersen/refinerdb.git"
  },
  "author": "Andrew Petersen",
  "bugs": {
    "url": "https://github.com/DroopyTersen/refinerdb/issues"
  },
  "homepage": "https://github.com/DroopyTersen/refinerdb#readme",
  "dependencies": {
    "comlink": "^4.3.1",
    "dexie": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "esbuild": "^0.13.12",
    "fake-indexeddb": "^3.1.7",
    "jest": "^27.3.1",
    "majestic": "^1.8.1",
    "refinerdb": "^1.2.4-alpha.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "refinerdb": "../refinerdb"
  },
  "license": "MIT",
  "keywords": [
    "indexeddb",
    "refiners",
    "search"
  ],
  "gitHead": "ce9b19b6b2da5f8895d42fc644eb9fece51f5e6b"
}
